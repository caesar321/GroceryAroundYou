<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grocerybackground"
    tools:context=".RegisterSellerActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grocery- Register"
                      android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="4dp"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                       android:layout_centerInParent="true"
                        android:layout_marginTop="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/user"
                        android:id="@+id/reSellerImg"/>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
             android:background="@drawable/radiuscard"
                    android:layout_marginTop="3dp"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="12dp"
                    android:elevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/backgroundloginedittext"
                            android:layout_marginTop="20dp">
                            <EditText
                                android:id="@+id/reSellerName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:hint="UserName"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/backgroundloginedittext"
                            android:layout_marginTop="20dp">
                            <EditText
                                android:id="@+id/reSellerShop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:hint="Business Name"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/backgroundloginedittext"
                            android:layout_marginTop="20dp">
                            <EditText
                                android:id="@+id/rSellerPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:hint="Phone Number"
                                android:inputType="number" />


                        </com.google.android.material.textfield.TextInputLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_baseline_add_location_24"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="12dp"
                            android:id="@+id/gpsSeller"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/backgroundloginedittext"
                                android:id="@+id/demoCountry"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginTop="10dp">
                                <EditText
                                    android:id="@+id/reSellerCountry"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="5dp"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:hint="Country"
                                    android:inputType="text" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/backgroundloginedittext"
                                android:id="@+id/demoState"
                                android:layout_below="@id/demoCountry"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginTop="10dp">
                                <EditText
                                    android:id="@+id/reSellerState"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="5dp"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:hint="State"
                                    android:inputType="text" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/backgroundloginedittext"
                                android:id="@+id/demoCity"
                                android:layout_below="@id/demoState"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="10dp">
                                <EditText
                                    android:id="@+id/reSellerCity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="5dp"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:hint="City"
                                    android:inputType="text" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </RelativeLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/backgroundloginedittext"
                            android:layout_marginTop="12dp">
                            <EditText
                                android:id="@+id/reSellerEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:hint="Email"
                                android:inputType="textEmailAddress" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            app:passwordToggleEnabled="true"
                            android:background="@drawable/backgroundloginedittext"
                            android:layout_marginTop="20dp">
                            <EditText
                                android:id="@+id/reSellerPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:hint="Password"
                                android:inputType="textPassword" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            app:passwordToggleEnabled="true"
                            android:background="@drawable/backgroundloginedittext"
                            android:layout_marginTop="20dp">
                            <EditText
                                android:id="@+id/reSellerConPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:hint="Confirm Password"
                                android:inputType="textPassword" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SignUp"
                            android:layout_marginTop="12dp"
                            android:id="@+id/btnSellerSignUp"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/black"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>